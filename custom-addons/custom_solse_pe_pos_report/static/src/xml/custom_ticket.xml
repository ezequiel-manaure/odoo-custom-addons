<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">

        <!-- Encabezado -->
        <xpath expr="//table[hasclass('tabla')]/tr[1]" position="replace">
            <tr style="font-size: 10px; font-weight: bold; border-bottom: 1px solid #000; text-transform: uppercase;">
                <td style="width: 14%; text-align: center; padding: 0 6px;">RI</td>
                <td style="width: 36%; padding: 0 6px;">Producto</td>
                <td style="width: 12%; text-align: center; padding: 0 6px;">Cant.</td>
                <td style="width: 16%; text-align: right; padding: 0 6px;">P.Unit</td>
                <td style="width: 22%; text-align: right; padding: 0 6px;">Total</td>
            </tr>
        </xpath>

        <!-- Reemplazar cada fila de detalle -->
        <xpath expr="//table[hasclass('tabla')]//t[@t-foreach='lines']//tr" position="replace">
            <tr style="font-size: 11px; white-space: nowrap;">
                <!-- RI -->
                <td style="width: 14%; text-align: center; padding: 0 6px;">
                    <t t-esc="line.default_code"/>
                </td>
                <!-- Producto -->
                <td style="width: 36%; overflow: hidden; text-overflow: ellipsis; padding: 0 6px;">
                    <t t-esc="line.productName"/>
                </td>
                <!-- Cantidad -->
                <td style="width: 12%; text-align: center; padding: 0 6px;">
                    <t t-esc="line.qty"/> <span style="font-size: 8px; color: #777;"><t t-esc="line.unit"/></span>
                </td>
                <!-- Precio Unitario -->
                <td style="width: 16%; text-align: right; padding: 0 6px;">
                    <t t-esc="line.unitPrice"/>
                </td>
                <!-- Total -->
                <td style="width: 22%; text-align: right; font-weight: bold; padding: 0 6px;">
                    <t t-esc="line.price"/>
                </td>
            </tr>
        </xpath>

    </t>
</templates>

